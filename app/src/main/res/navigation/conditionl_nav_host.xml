<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conditional_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.meimtiaz.navigation.fragments.conditional.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"/>
    </fragment>
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.meimtiaz.navigation.fragments.conditional.UserProfileFragment"
        android:label="UserProfileFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.meimtiaz.navigation.fragments.conditional.LoginFragment"
        android:label="LoginFragment" />
</navigation>