<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_up_nav_graph"
    app:startDestination="@id/AFragment">

    <fragment
        android:id="@+id/AFragment"
        android:name="com.meimtiaz.navigation.fragments.popup.AFragment"
        android:label="AFragment" >
        <action
            android:id="@+id/action_AFragment_to_BFragment"
            app:destination="@id/BFragment" />
    </fragment>

    <fragment
        android:id="@+id/BFragment"
        android:name="com.meimtiaz.navigation.fragments.popup.BFragment"
        android:label="BFragment" >
        <action
            android:id="@+id/action_BFragment_to_CFragment"
            app:destination="@id/CFragment" />
    </fragment>

    <fragment
        android:id="@+id/CFragment"
        android:name="com.meimtiaz.navigation.fragments.popup.CFragment"
        android:label="CFragment" >
        <action
            android:id="@+id/action_CFragment_to_AFragment"
            app:destination="@id/AFragment"
            app:popUpTo="@+id/a"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>